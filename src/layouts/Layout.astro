---
import '@fontsource-variable/work-sans';
import '@fontsource-variable/big-shoulders-inline-text';
import { ViewTransitions } from 'astro:transitions';
import { SEO } from "astro-seo";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head> 
    <meta charset="UTF-8">
    <SEO
    title={title}
    description="Facilities maintenance, repair, HVAC, preventive equipment maintenance for San Jose and the Bay Area"
    openGraph={{
      basic: {
        title: "Facilities Fusion",
        type: "website",
        url: "https://facilitiesfusion.com/",
        image: "https://facilitiesfusion.com/FacilitiesFusioncColorLogo.webp",
    }}},
      extend={{
      // extending the default link tags
      link: [{ rel: "icon", href: "/favicon.ico" }],
      // extending the default meta tags
      meta: [
        { name: "generator", content: Astro.generator },
        { name: "viewport", content:"width=device-width"}
      ],
    }}
  />
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        font-family: Work Sans Variable,Proxima Nova,ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif,"Apple Color Emoji","Segoe UI Emoji",Segoe UI Symbol,"Noto Color Emoji";
        background-color: #26272b;
        overflow-x: hidden;
        scroll-behavior: smooth;
      }
    </style>
    <!-- Google tag (gtag.js) -->
  <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-RKGLZN2KTY"></script>
  <script type="text/partytown">
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-RKGLZN2KTY');
  </script>
  </body>
</html>
